@page
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Password Recovery</h3></div>
                <div class="card-body">
                    <form>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputPassword" type="password" placeholder="Password" />
                            <label for="inputPassword">Password</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputConfirmPassword" type="password" placeholder="Password" />
                            <label for="inputConfirmPassword">Confirm Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-page="/Authentication/Login">Return to login</a>
                            <a class="btn btn-primary" href="#">Reset Password</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-page="/Authentication/Register">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
