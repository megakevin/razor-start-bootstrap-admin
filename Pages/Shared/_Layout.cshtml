<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RazorStartBootstrapAdmin</title>
    <script type="importmap"></script>

    @await RenderSectionAsync("Styles", required: false)

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
@* By removing the .sb-nav-fixed class from the body, the top navigation and side navigation will become static on scroll. *@
<body class="sb-nav-fixed">
    <partial name="_TopNavBar.cshtml" />

    <div id="layoutSidenav">
        <partial name="_SideNavBar.cshtml" />

        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>

            <partial name="_Footer.cshtml" />
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
